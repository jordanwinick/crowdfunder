<div class="project">
  <div class="project-info">
    <h3><%= @project.name %></h3>
    <p><%= @project.description %></p>
    <p><%= @project.goal %></p>
    <p><%= format_date(@project.start_date) %></p>
    <p><%= format_date(@project.end_date) %></p>
    <p><%= time_in_days(@project.end_date) %> left</p>
  </div>
  <div class="project-rewards">
    <h3>Rewards</h3>
    <% if @rewards %>
      <div class="reward-card">
        <% @rewards.each do |reward| %>
          <h4><%= reward.title %></h4>
          <p><%= reward.description %></p>
          <p><%= reward.amount %></p>
          <p><%= reward.backer_limit %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
  <% if project_owner?(@project) %>
    <%= link_to "Edit Project", edit_project_path(@project) %>
  <% end %>
<%= link_to "Return to projects", projects_path %>